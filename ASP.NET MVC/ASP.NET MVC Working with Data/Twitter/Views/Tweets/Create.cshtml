@using Twitter.ViewModels
@model TweetViewModel
@{
    ViewBag.Title = "Create Tweet";
}

<h1>Tweets search</h1>

@using (Html.BeginForm("Create", "Tweets"))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @Html.TextBoxFor(model => model.Content)
    @Html.ValidationMessageFor(model => model.Content, null, new { @class = "help-inline" })
    <br />
    <input type="submit" value="Tweet" />
}

@Html.ActionLink("Back", "Index", "Home")

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}